# Jarvis AI Assistant Configuration
SECRET_KEY=jarvis-secret-key-2024
DEBUG=True
FLASK_ENV=development

# Optional: OpenAI API Key (leave empty for free version)
OPENAI_API_KEY=

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# File Upload Settings (16MB limit)
MAX_CONTENT_LENGTH=16777216

# Text-to-Speech Settings
TTS_RATE=150
TTS_VOLUME=0.8
TTS_PITCH=1.0

# Application Metadata
APP_NAME=Jarvis AI Study Assistant
APP_VERSION=1.0.0
APP_DESCRIPTION=Voice-enabled AI study assistant for CBSE education

# GitHub Pages Settings
GITHUB_USERNAME=yourusername
GITHUB_REPO=Jarvis-Initializer
GITHUB_PAGES_URL=https://yourusername.github.io/Jarvis-Initializer/

# Educational Content Settings
DEFAULT_CLASS=10
DEFAULT_SUBJECT=mathematics
SUPPORTED_CLASSES=6,7,8,9,10,11,12
SUPPORTED_SUBJECTS=mathematics,physics,chemistry,biology

# Voice Recognition Settings
SPEECH_LANGUAGE=en-US
SPEECH_CONTINUOUS=false
SPEECH_INTERIM_RESULTS=true

# Audio Settings
ENABLE_SOUND_EFFECTS=true
BOOTUP_AUDIO=true
WELCOME_SOUND=true

# Development Settings
LOG_LEVEL=INFO
ENABLE_CORS=true
STATIC_FOLDER=frontend
TEMPLATE_FOLDER=frontend
